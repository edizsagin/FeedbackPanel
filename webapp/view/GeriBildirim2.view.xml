<mvc:View
    controllerName="zktbldg.controller.GeriBildirim2"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>NotAdd}"
        backgroundDesign="List"
        floatingFooter="false"
        showNavButton="true"
        navButtonPress="onPageNavButtonPress"
    >
        <f:SimpleForm
            id="SimpleFormCopy"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="2"
            labelSpanL="2"
            labelSpanM="4"
            labelSpanS="4"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="3"
            emptySpanM="2"
            emptySpanS="1"
            columnsXL="10"
            columnsL="8"
            columnsM="4"
            singleContainerFullSize="true"
        >
            <f:content>
                <Label
                    text="{i18n>NotType}"
                    labelFor="GroupA"
                />
                <RadioButtonGroup id="GroupA">
                    <RadioButton
                        id="RB1"
                        text="{i18n>Suggestion}"
                        selected="true"
                        select="RBchange"
                    />
                    <RadioButton
                        id="RB2"
                        text="{i18n>Complaint}"
                        select="RBchange"
                    />
                </RadioButtonGroup>
                <Label text="{i18n>Desc}" />
                <TextArea
                    id="TextAreaLong"
                    value="{Txtlong}"
                    liveChange="changeText"
                    valueState="Success"
                    growing="true"
                    width="100%"
                    rows="12"
                    growingMaxLines="13"
                />
            </f:content>
        </f:SimpleForm>
        <footer>
            <OverflowToolbar>
                <Text
                    id="counter"
                    text=""
                />
                <ToolbarSpacer />
                <Button
                    id="btn_send"
                    text="{i18n>Send}"
                    enabled="true"
                    icon="sap-icon://paper-plane"
                    type="Emphasized"
                    press="pressSend"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
